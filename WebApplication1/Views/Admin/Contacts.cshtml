
@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Views/Shared/Admin.cshtml";
}

@model List<ContactViewModel>
<div class="row mt-10">
    <div class="col-md-12">
        <table class="table table-hover" id="habertable">
            <thead>
                <tr>
                    <td>Sıra No</td>
                    <td>Kişi Adı</td>
                    <td>Kişi SoyAdı</td>
                    <td>Kişi Mail</td>
                    <td>Kişi Mesaj</td>
                    <td>İslemler</td>
                </tr>

            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Email</td>
                        <td>@item.Message</td>
                        <td>
                            <a class="btn btn-danger" asp-action="ContactsDelete" asp-controller="Admin" asp-route-ıd="@item.Id"> Sil</a>
                        </td>
                    </tr>
                    i = i + 1;
                }

            </tbody>
        </table>
    </div>
</div>


